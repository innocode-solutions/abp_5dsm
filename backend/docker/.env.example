# ==============================================
# Docker Environment Configuration
# ==============================================
# Copy this file to `.env` and update with your environment-specific values.
# Used by all Docker Compose configurations (dev / staging / prod)

# ==============================================
# Application Configuration
# ==============================================
NODE_ENV=production
PORT=3000
BACKEND_PORT=3000

# HTTP and HTTPS ports (used by backend HTTPS server)
HTTP_PORT=8080
HTTPS_PORT=8443

# ==============================================
# Database Configuration (PostgreSQL)
# ==============================================
POSTGRES_DB=academic_management
POSTGRES_USER=abp_user
POSTGRES_PASSWORD=abp_password
POSTGRES_PORT=5432

# Prisma connection URL (internal inside Docker)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# ==============================================
# Authentication & Security
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ==============================================
# Frontend Configuration
# ==============================================
FRONTEND_URL=http://localhost:3001

# ==============================================
# SSL / HTTPS Configuration
# ==============================================
# Local certificates for staging HTTPS (auto-assinado)
SSL_KEY_PATH=./certs/server.key
SSL_CERT_PATH=./certs/server.cert

# ==============================================
# Domain Configuration (Production)
# ==============================================
# For production (Let's Encrypt)
DOMAIN_NAME=api.seu-dominio.com
EMAIL_ADMIN=seu-email@dominio.com

# ==============================================
# Optional Tools
# ==============================================
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
