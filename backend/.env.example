# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/academic_management"

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h
JWT_RESET_SECRET=your-super-secret-jwt-reset-key-here

# Security
BCRYPT_ROUNDS=12

# ML Service Configuration
ML_BASE_URL=http://localhost:5000
ML_TIMEOUT_MS=2000

# ===== SMTP Configuration (Email Service) =====
# Opção 1: Gmail (Recomendado)
# 1. Crie uma conta Google: https://accounts.google.com
# 2. Ative autenticação em 2 etapas: https://myaccount.google.com/security
# 3. Gere uma App Password: https://myaccount.google.com/apppasswords
# 4. Selecione Mail + Windows e copie a senha gerada

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-app-password-aqui
OTP_EMAIL_FROM=seu-email@gmail.com

